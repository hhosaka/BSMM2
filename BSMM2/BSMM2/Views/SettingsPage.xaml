<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Views.SettingsPage"
			 xmlns:local="clr-namespace:BSMM2.ViewModels"
			 Title="{Binding Name}">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Back" Clicked="Back" Order="Secondary" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="Auto Save" VerticalOptions="Center" />
				<CheckBox IsChecked="{Binding AutoSave}" />
			</StackLayout>
			<Label Text="Mail Address:" />
			<Editor Text="{Binding MailAddress}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>