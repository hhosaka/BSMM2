<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Views.PlayersPage"
			  Title="{Binding Title}"
			 x:Name="BrowseItemsPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="New Game" Command="{Binding NewGameCommand}" Order="Secondary" />
		<ToolbarItem Text="Rule" Command="{Binding RuleCommand}" Order="Secondary" />
		<ToolbarItem Text="Select Game" Command ="{Binding SelectGameCommand}" Order="Secondary" />
		<ToolbarItem Text="Delete Game" Command ="{Binding DeleteGameCommand}" Order="Secondary" />
		<ToolbarItem Text="AddPlayer" Command="{Binding AddPlayerCommand}" Order="Secondary" />
		<ToolbarItem Text="Export Players" Command="{Binding ExportPlayersCommand}" Order="Secondary" />
		<ToolbarItem Text="Json" Clicked="OpenJsonPage" Order="Secondary" />
		<ToolbarItem Text="Settings" Clicked="OpenSettingsPage" Order="Secondary" />
		<!--ToolbarItem Text="Log" Clicked="Log" Order="Secondary" /-->
		<ToolbarItem Text="Help" Order="Secondary" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<ListView x:Name="PlayersListView"
				ItemsSource="{Binding Players}"
				VerticalOptions="FillAndExpand"
				 HasUnevenRows="true"
				 IsRefreshing="{Binding IsBusy, Mode=OneWay}"
				 CachingStrategy="RecycleElement"
				 ItemTapped="OnPlayerTapped">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Padding="10">
								<StackLayout Orientation="Horizontal">
									<Label Text="{Binding Order}" FontSize="16" />
									<Label Text="{Binding Name}" FontSize="16" />
								</StackLayout>
								<Label Text="{Binding Result.Information}" FontSize="13" />
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>