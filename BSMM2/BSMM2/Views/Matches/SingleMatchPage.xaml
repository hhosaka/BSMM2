<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Views.Matches.SingleMatchPage"
			 xmlns:local="clr-namespace:BSMM2.ViewModels"
			 Title="{Binding Title}">
	<ContentPage.Content>
		<StackLayout>
			<Editor Text="{Binding LifePoint1}" Keyboard="Numeric" Margin="0" IsVisible="True" />
			<Picker x:Name="ResultSelector"
				SelectedItem="{Binding SelectedItem}"
				ItemsSource="{Binding Items}"
				ItemDisplayBinding="{Binding Name}">
			</Picker>
			<Editor Text="{Binding LifePoint2}" Keyboard="Numeric" Margin="0" IsVisible="True" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>