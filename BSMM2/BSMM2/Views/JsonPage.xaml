<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Views.JsonPage"
			 xmlns:local="clr-namespace:BSMM2.ViewModels"
			 Title="{Binding Name}">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Back" Clicked="Back" Order="Secondary" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<StackLayout Orientation="Horizontal">
				<Label Text="As Current Game" />
				<CheckBox IsChecked="{Binding AsCurrentGame}" />
			</StackLayout>
			<Editor Text="{Binding Buf}" HeightRequest="512" />
			<StackLayout Orientation="Horizontal">
				<Button Text="Import" Command="{Binding ImportCommand}" HorizontalOptions="FillAndExpand" />
				<Button Text="Send Mail" Command="{Binding SendByMailCommand}" HorizontalOptions="FillAndExpand" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>