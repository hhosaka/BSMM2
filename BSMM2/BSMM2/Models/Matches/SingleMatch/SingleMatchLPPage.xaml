<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Models.Matches.SingleMatch.SingleMatchLPPage"
			 Title="{Binding Title}">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Back" Clicked="Back" Order="Secondary" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<Switch IsToggled="{Binding Player1}" />
			<Switch IsToggled="{Binding Draw}" />
			<Switch IsToggled="{Binding Player2}" />
			<Label Text="{Binding LifePointTitle1}" />
			<Editor Text="{Binding LifePoint1}" Keyboard="Numeric" />
			<Label Text="{Binding LifePointTitle2}" />
			<Editor Text="{Binding LifePoint2}" Keyboard="Numeric" />
			<Button Text="Done" Command="{Binding DoneCommand}"  HorizontalOptions="FillAndExpand" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>