<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="BSMM2.Models.Matches.SingleMatch.SingleMatchLPPage"
			 Title="{Binding Title}">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Back" Clicked="Back" Order="Secondary" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<StackLayout Orientation="Horizontal">
				<Switch IsToggled="{Binding ResultItem.Player1Win}" />

				<Picker
					ItemsSource ="{Binding LifePoints}"
					SelectedItem="{Binding Player1LP}"
					ItemDisplayBinding="{Binding Label}" />

				<Label Text="{Binding Player1.Name}" FontSize="Medium" VerticalTextAlignment="Center" />
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Switch IsToggled="{Binding ResultItem.Draw}" />
			</StackLayout>
			<StackLayout Orientation="Horizontal">
				<Switch IsToggled="{Binding ResultItem.Player2Win}" />
				<Picker
					ItemsSource ="{Binding LifePoints}"
					SelectedItem="{Binding Player2LP}"
					ItemDisplayBinding="{Binding Label}" />
				<Label Text="{Binding Player2.Name}" FontSize="Medium" VerticalTextAlignment="Center" />
			</StackLayout>
			<Button Text="Done" Command="{Binding DoneCommand}"  HorizontalOptions="FillAndExpand" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>